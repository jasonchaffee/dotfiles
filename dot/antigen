# Configure antigen, if installed

ANTIGEN_INSTALLED=0

# Check if installed with Homebrew or cloned from github
if [[ -f /usr/local/share/antigen/antigen.zsh ]]; then
    . /usr/local/share/antigen/antigen.zsh
    ANTIGEN_INSTALLED=1
elif [[ -f ${HOME}/.antigen/antigen.zsh ]]; then
    . ${HOME}/.antigen/antigen.zsh
    ANTIGEN_INSTALLED=1
fi

if [[ $ANTIGEN_INSTALLED -eq 1 ]]; then
    # Load the oh-my-zsh's library.
    antigen use oh-my-zsh

    # Load prezto
    #antigen bundle sorin-ionescu/prezto

    # Bundles from the default repo (robbyrussell's oh-my-zsh).

    antigen bundle aws
    antigen bundle colored-man-pages
    antigen bundle command-not-found
    antigen bundle dotenv
    antigen bundle git
    antigen bundle go
    #antigen bundle gulp
    antigen bundle heroku
    antigen bundle

    # Docker
    antigen bundle docker
    antigen bundle docker-compose

    # Java / Scala
    antigen bundle gradle history
    antigen bundle httpie
    antigen bundle kubectl
    #antigen bundle postgres
    antigen bundle safe-paste
    antigen bundle svn
    #antigen bundle tmux

    # Brew
    antigen bundle brew
    antigen bundle mvn
    antigen bundle sbt
    antigen bundle scala
    antigen bundle spring

    # Ruby
    antigen bundle bundler
    antigen bundle gem
    antigen bundle rails
    antigen bundle rake
    antigen bundle rbenv
    antigen bundle ruby

    # Node
    antigen bundle node
    antigen bundle npm
    antigen bundle nvm

    # Python
    antigen bundle pip
    antigen bundle pyenv
    antigen bundle python

    # Auto Suggestions
    antigen bundle zsh-users/zsh-autosuggestions

    # Syntax Highlighting
    antigen bundle zsh-users/zsh-syntax-highlighting

    # Load the theme.
    antigen theme https://github.com/jasonchaffee/chaffee.zsh-theme.git chaffee

    # Tell antigen that you're done.
    antigen apply
 fi
